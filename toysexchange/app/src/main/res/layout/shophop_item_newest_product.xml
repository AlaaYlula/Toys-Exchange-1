    <androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/sh_spacing_control"
        android:layout_marginEnd="@dimen/sh_spacing_control"
        android:layout_marginBottom="@dimen/sh_spacing_standard"
        app:cardCornerRadius="@dimen/sh_spacing_control_half"
        app:cardElevation="0dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/listProductRaw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/ShopHop_itemText_background"
            >

            <ImageView
                android:id="@+id/ivImage"
                android:layout_width="@dimen/_105sdp"
                android:layout_height="match_parent"
                android:layout_alignBottom="@id/llContent"
                android:layout_alignParentTop="true"
                android:contentDescription="@string/sh_text_todo"
                android:scaleType="fitXY" />

            <LinearLayout
                android:id="@+id/llContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/ivImage"
                android:orientation="vertical"
                android:paddingStart="@dimen/sh_spacing_standard"
                android:paddingEnd="@dimen/sh_spacing_standard">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sh_spacing_control"
                    android:singleLine="true"
                    android:text="test"
                    android:textAppearance="@style/FontSemiBold"
                    android:textColor="@color/ShopHop_textColorPrimary"
                    android:textSize="@dimen/sh_font_size_medium" />

                <LinearLayout
                    android:id="@+id/llProductColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sh_spacing_standard"
                    android:orientation="horizontal">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llProductSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sh_spacing_standard"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvCondition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/sh_spacing_control"
                        android:textAppearance="@style/FontSemiBold"
                        android:text="new"
                        android:textColor="@color/ShopHop_textColorPrimary"
                        android:textSize="@dimen/sh_font_size_small" />

                </LinearLayout>

<!--                <TextView-->
<!--                    android:id="@+id/tvProductRate"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginTop="@dimen/sh_spacing_standard"-->
<!--                    android:drawableEnd="@drawable/shophop_ic_star_black"-->
<!--                    android:drawablePadding="@dimen/sh_spacing_control"-->
<!--                    android:text="test"-->
<!--                    android:textColor="@color/ShopHop_textColorPrimary"-->
<!--                    android:textSize="@dimen/sh_font_size_micro" />-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/sh_spacing_standard"
                    android:paddingBottom="@dimen/sh_spacing_control">

                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/FontSemiBold"
                        android:textColor="@color/ShopHop_colorPrimary"
                        android:textSize="@dimen/sh_font_size_medium"
                        tools:text="$100" />

<!--                    <TextView-->
<!--                        android:id="@+id/toy_ActualPrice"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_marginStart="@dimen/sh_spacing_control"-->
<!--                        android:layout_marginTop="@dimen/sh_spacing_control_half"-->
<!--                        android:layout_marginEnd="@dimen/sh_spacing_control"-->
<!--                        android:layout_toStartOf="@id/ivDislike"-->
<!--                        android:layout_toEndOf="@id/toy_Price"-->
<!--                        android:textAppearance="@style/FontSemiBold"-->
<!--                        android:textColor="@color/ShopHop_dots_color"-->
<!--                        android:textSize="@dimen/sh_font_size_micro"-->
<!--                        tools:text="$100" />-->

                    <ImageView
                        android:id="@+id/ivDislike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="@dimen/sh_spacing_control"
                        android:background="@drawable/shophop_bg_circle"
                        android:contentDescription="@string/sh_text_todo"
                        android:padding="@dimen/sh_spacing_control"
                        android:src="@drawable/shophop_ic_heart"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/ivlike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="@dimen/sh_spacing_control"
                        android:background="@drawable/shophop_bg_circle"
                        android:backgroundTint="@color/ShopHop_favourite_background"
                        android:contentDescription="@string/sh_text_todo"

                        android:padding="@dimen/sh_spacing_control"
                        android:src="@drawable/shophop_ic_heart_fill"
                        android:visibility="gone" />

                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

